import random

def number_guessing_game():
    number_to_guess = random.randint(1, 100)
    max_attempts = 10

    print("Welcome to the Number Guessing Game!")
    print(f"Guess the number between 1 and 100. You have {max_attempts} attempts.")

    attempts = 0
    while attempts < max_attempts:
        try:
            guess = int(input(f"Attempt {attempts + 1}: Enter your guess: "))
        except ValueError:
            print("Invalid input! Please enter an integer number.")
            continue

        if guess < 1 or guess > 100:
            print("Your guess is out of range! Please guess a number between 1 and 100.")
            continue

        attempts += 1

        if guess == number_to_guess:
            print(f"Congratulations! You guessed the correct number {number_to_guess} in {attempts} attempts.")
            break
        elif guess < number_to_guess:
            print("Too low!")
        else:  # guess > number_to_guess
            print("Too high!")

    else:
        print(f"Sorry! You've used all {max_attempts} attempts. The number was {number_to_guess}.")

if __name__ == "__main__":
    number_guessing_game()
